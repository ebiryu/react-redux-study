{
  "env": {
    "browser": true,
    "es6": true,
    "amd": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "flowtype"
  ],
  "rules": {
    "no-console": "off",
    "indent": ["error", 2],
    "comma-spacing": 1
  },
  "globals": {
    "exports": true,
    "process": true,
    "module": true,
    "describe": true,
    "it": true,
    "expect": true
  }
}
